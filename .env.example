# Server
PORT=4000
UPLOAD_DIR=uploads
DATA_DIR=data
DB_FILE=posts.json
SERVER_BASE_URL=http://localhost:4000

# AI caption optimization (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Instagram publishing
# Use PUBLISH_MODE=mock for local testing without publishing.
# Use PUBLISH_MODE=live only with valid Graph API credentials.
PUBLISH_MODE=mock
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_ACCOUNT_ID=

# Autopilot agent (optional)
# When enabled, agent generates a 10s baby reel, writes AI caption + hashtags,
# schedules it 1 hour ahead, and publishes via existing scheduler.
AUTOPILOT_ENABLED=false
AUTOPILOT_INTERVAL_MINUTES=180
AUTOPILOT_DELAY_MINUTES=60
